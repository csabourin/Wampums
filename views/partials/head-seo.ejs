<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title><%= pageTitle %></title>
<meta name="description" content="<%= pageDescription %>" />
<meta name="robots" content="index,follow,max-image-preview:large" />

<!-- Canonical & Hreflang -->
<link rel="canonical" href="https://wampums.app<%= canonicalPath %>" />
<link rel="alternate" hreflang="en-CA" href="https://wampums.app<%= enPath %>" />
<link rel="alternate" hreflang="fr-CA" href="https://wampums.app<%= frPath %>" />
<link rel="alternate" hreflang="x-default" href="https://wampums.app<%= enPath %>" />

<!-- Open Graph -->
<meta property="og:type" content="<%= ogType || 'website' %>" />
<meta property="og:title" content="<%= pageTitle %>" />
<meta property="og:description" content="<%= pageDescription %>" />
<meta property="og:url" content="https://wampums.app<%= canonicalPath %>" />
<meta property="og:image" content="<%= ogImage || 'https://wampums.app/images/og-wampums-1200x630.jpg' %>" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="Wampums" />
<meta property="og:locale" content="<%= lang === 'fr' ? 'fr_CA' : 'en_CA' %>" />
<meta property="og:locale:alternate" content="<%= lang === 'fr' ? 'en_CA' : 'fr_CA' %>" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="<%= pageTitle %>" />
<meta name="twitter:description" content="<%= pageDescription %>" />
<meta name="twitter:image" content="<%= ogImage || 'https://wampums.app/images/og-wampums-1200x630.jpg' %>" />

<!-- Theme & PWA -->
<meta name="theme-color" content="#0f7a5a" />
<link rel="icon" href="/favicon.ico" />

<!-- Styles -->
<link rel="stylesheet" href="/landing.css" />
