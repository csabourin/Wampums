run = "npm start"

entrypoint = "api.js"
modules = ["postgresql-16", "nodejs-20"]

[nix]
channel = "stable-22_11"

[deployment]
deploymentTarget = "autoscale"
run = "npm run start:prod"
build = "npm install && npm run build"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 4173
externalPort = 4200

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[userenv]

[userenv.development]
PORT = "5000"
ALLOWED_ORIGINS = "http://localhost:5173,http://localhost:5000,http://localhost:3000,http://*.localhost:*,https://*.replit.dev,https://*.worf.replit.dev,https://*.repl.co"

[userenv.shared]
OPENAI_PRICE_OUTPUT_PER_1M = "0.60"
MINDEE_PRICE_PER_RECEIPT_USD = "0.10"

[userenv.production]
PORT = "5000"
ALLOWED_ORIGINS = "https://wampums.app,https://*.wampums.app,https://meute6a.app,https://mobile.meute6a.app"
NODE_ENV = "production"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true
